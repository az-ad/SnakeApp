<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background4"
    tools:context=".ExtraTrialActivity">

    <TextView
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:text="Sign up"
        android:textColor="#F6F1F1"
        android:textSize="30dp"
        android:textStyle="bold" />
    <!--    <ScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="608dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/white_background"
        android:gravity="center"
        android:orientation="vertical">


        <!--        <ImageView-->
        <!--            android:layout_width="108dp"-->

        <!--            android:layout_height="94dp"-->

        <!--            android:layout_marginBottom="20dp"-->
        <!--            android:src="@drawable/ic_action_profile" />-->

        <EditText
            android:id="@+id/userNameEditText_Id"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text1_bg"
            android:drawableLeft="@drawable/ic_action_name"
            android:hint="user name"
            android:paddingStart="10dp"
            android:textColor="#656060"
            android:textColorHint="#656060"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phoneNumberEditText_Id"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text1_bg"
            android:drawableLeft="@drawable/ic_action_name"
            android:hint="Phone number"
            android:paddingStart="10dp"
            android:textColor="#656060"
            android:textColorHint="#656060"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/datepickerEditText_Id"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text1_bg"
            android:drawableLeft="@drawable/ic_action_name"
            android:focusable="false"
            android:hint="Date of birth(dd/mm/yy)"
            android:paddingStart="10dp"
            android:textColor="#656060"
            android:textColorHint="#656060"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailEditText_Id"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text1_bg"
            android:drawableLeft="@drawable/ic_action_mail"
            android:hint="Email"
            android:paddingStart="10dp"
            android:textColor="#656060"
            android:textColorHint="#656060"
            android:textSize="16sp"
            android:textStyle="bold"

            />


        <EditText
            android:id="@+id/passwordEditText_Id"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text1_bg"
            android:drawableLeft="@drawable/ic_action_lock"
            android:hint="Password"
            android:paddingStart="10dp"
            android:textColor="#656060"
            android:textColorHint="#656060"
            android:textSize="16sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/textView_indian_states"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="40dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="6dp"
            android:text="Division:"
            android:textColor="#555555" />

        <Spinner
            android:id="@+id/spinner_indian_states"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"


            />

        <Button
            android:id="@+id/signUpButton_Id"

            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/edit_text1_bg"

            android:shadowColor="#9D39A8"
            android:shadowDx="0"
            android:shadowDy="0"

            android:shadowRadius="5"
            android:text="Sign up"
            android:textColor="#FFEDF9"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/logInTextView_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:text="Already have an account?Log in" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"/>
    <!--</ScrollView>-->

</LinearLayout>