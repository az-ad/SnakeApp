<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".ProfileUserActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="137dp"
        android:layout_height="129dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/user_profile"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="331dp"
        android:layout_height="471dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        tools:ignore="MissingConstraints">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_background">
            <EditText
                android:id="@+id/userNameEditText_Id"
                android:layout_width="266dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/edit_text1_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="User Name:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/nameEditText_Id"
                android:layout_width="266dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="108dp"
                android:background="@drawable/edit_text1_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/emailEditText_Id"
                android:layout_width="263dp"
                android:layout_height="49dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="176dp"
                android:background="@drawable/edit_text1_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Email:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/divisionEditText_Id"
                android:layout_width="263dp"
                android:layout_height="49dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="244dp"
                android:background="@drawable/edit_text1_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Division:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/phoneNumberEditText_Id"
               android:layout_width="263dp"
                android:layout_height="49dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="312dp"
                android:background="@drawable/edit_text1_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Phone Number:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/editProfileButton_Id"
                android:layout_width="259dp"
                android:layout_height="64dp"
                android:layout_marginStart="40dp"

                android:layout_marginTop="28dp"
                android:text="Edit Profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumberEditText_Id" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>